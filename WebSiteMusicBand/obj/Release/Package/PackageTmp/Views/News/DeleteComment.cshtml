@model WebSiteMusicBand.Model.NewsComments

@{
    ViewBag.Title = "DeleteComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeleteComment</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>News Comment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CommentsText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CommentsText)
        </dd>

        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomUsers.ForumName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteComment","News",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.NewsId)
        @Html.HiddenFor(model => model.CommentsText)
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            <div class="btn btn-default">
                @Html.ActionLink("Back", "Details", new { id = Model.NewsId })
            </div>
        </div>
    }
</div>
